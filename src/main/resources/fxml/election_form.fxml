<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.ElectionFormController"
      spacing="15"
      styleClass="screen-root">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- Header -->
    <Label text="Election Form" styleClass="screen-title"/>

    <!-- Type -->
    <HBox spacing="10">
        <Label text="Type:" prefWidth="120" styleClass="form-label"/>
        <ComboBox fx:id="cmbType" styleClass="form-field"/>
    </HBox>

    <!-- Location -->
    <HBox spacing="10">
        <Label text="Location:" prefWidth="120" styleClass="form-label"/>
        <TextField fx:id="txtLocation"
                   promptText="City / Region"
                   styleClass="form-field"/>
    </HBox>

    <!-- Date -->
    <HBox spacing="10">
        <Label text="Date:" prefWidth="120" styleClass="form-label"/>
        <TextField fx:id="txtDate"
                   promptText="YYYY-MM-DD"
                   styleClass="form-field"/>
    </HBox>

    <!-- Seats -->
    <HBox spacing="10">
        <Label text="Seats:" prefWidth="120" styleClass="form-label"/>
        <TextField fx:id="txtSeats"
                   promptText="Number of seats"
                   styleClass="form-field"/>
    </HBox>

    <!-- Buttons -->
    <HBox spacing="15">
        <Button text="Save"
                onAction="#saveElection"
                prefWidth="100"
                styleClass="btn-primary"/>

        <Button text="Cancel"
                onAction="#cancel"
                prefWidth="100"
                styleClass="btn-secondary"/>
    </HBox>

    <Label fx:id="lblStatus" styleClass="status-label"/>

</VBox>
